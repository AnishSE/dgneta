<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
	
  <!-- Main Content -->
	<div id="content">

		  <!-- Header -->
	  	<%- include('partials/header.ejs') -%>
	  	<!-- End of Header -->

	  	<!-- Begin Page Content -->
  		<div class="container-fluid">
			  <div class="card shadow mb-4">
            <div class="card-header py-3">
              <div class="col-md-6" style="float:left">
                <h5 class="m-0 font-weight-bold text-primary">Gallery List</h5>
              </div>
              <div class="col-md-6" style="float:right;margin-right: -375px;">
                <button class="addMedia" style="color:white;background-color:#224abe;" data-toggle="modal" data-target="#addMediaModal">Add Gallery</button>
              </div>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="gallery_datatable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>S.No</th>	
                      <th>Title</th>
                      <th>Description</th>
                      <th>Gallery Media</th>
                      <th>Action</th>                      
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>S.No</th> 
                      <th>Title</th>
                      <th>Description</th>
                      <th>Gallery Media</th>
                      <th>Action</th>                      
                    </tr>
                  </tfoot>
                  <tbody>
                   <%for(var i=0; i<data.length; i++) {%> 
                      <tr>
                        <td><%=i+1%></td>
                        <td><%=data[i].title %></td>
                        <td><%=data[i].description %></td>
                        <td><img src="<%=data[i].Media.media_url %>"/></td>
                        <td>
	                        <a style="background-color:#e18932;color:white;padding:5px;" href="javascript:void(0)" data-gallery_id="<%=data[i].id %>">Add More</a>
                        </td>
                      </tr>
                    <% } %>    
                  </tbody>                  
                </table>
              </div>
            </div>
        </div>
		  </div>
      <!-- End Page Content -->
	</div>
  <!-- Add Media Modal -->
  <div class="modal fade" id="addMediaModal" tabindex="-1" role="dialog" aria-labelledby="addMediaModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addMediaModalLabel">Add Gallery</h5>
              <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="profile-notification-msg p-2">
                <p class="successmsg"><%= messages.successmsg %></p>
                <p class="errormsg"><%= messages.errormsg %></p>
              </div>
              <form class="createGalleryForm" name="createGalleryForm" method="POST" action="/admin/addMedia">
                <div class="form-group">
                  <label>Title</label>
                  <input type="text"  class="form-control"  name="title" placeholder="Enter Title"/>
                </div>
                <div class="form-group">
                  <label>Description</label>
                  <input type="text"  class="form-control"  name="last_name" placeholder="Enter Description"/>
                </div>
                <div class="form-group">
                  <label>Media</label>
                  <input type="file"  class="form-control"  name="file"/>
                </div>              
                <div class="form-group text-center">  
                  <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                  <button class="btn btn-primary" type="submit">Submit</button>
                </div>
              </form>
            </div>
            
          </div>
        </div>
  </div>
  <!-- // Add Media Modal -->    

	<!-- End of Main Content -->