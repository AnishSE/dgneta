<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

	<!-- Main Content -->
	<div id="content">

		  <!-- Header -->
	  	<%- include('partials/header.ejs') -%>
	  	<!-- End of Header -->

	  	<!-- Begin Page Content -->
  		<div class="container-fluid">

        <div class="row content-header py-3">
          <div class="col-md-6" style="float:left">
            <h1>Edit Profile</h1>
          </div>
        </div>
        
        <div class="row">    
          <div class="col-md-12 ">
              <div class="box edit_profile_detail">
                  <div class="box-body">
                      
                      <form class="editProfileForm" method="POST" action="editProfile">
                          <div class="row">
                            <div class="form_group col-sm-6">
                                <label for="first_name">First Name</label>
                                <input class="form_group" name="first_name" value="<%= data.first_name %>">
                            </div>
                            <div class="form_group col-sm-6">
                                <label for="last_name">Last Name</label>
                                <input class="form_group" name="last_name" value="<%= data.last_name %>">                              
                            </div>
                          </div>
                          <div class="row">
                            <div class="form_group col-sm-6">
                                <label for="facebook_url">Facebook URL</label>
                                <input class="form_group" name="facebook_url" value="<%= data.facebook_url %>">                              
                            </div>
                            <div class="form_group col-sm-6">
                                <label for="phone">Phone</label>
                                <input class="form_group" name="phone" value="<%= data.phone %>">                                                              
                            </div>
                          </div>
                          <div class="row">
                            <div class="form_group col-sm-6">
                                <label for="email">Email</label>
                                <input class="form_group" name="email" value="<%= data.email %>">                                              
                            </div>
                            <div class="form_group col-sm-6">
                                <label for="dob">DOB</label>
                                <input class="form_group" name="dob" value="<%= data.dob %>">                                                  
                            </div>
                          </div>
                          <div class="row">
                            <div class="form_group col-sm-6">
                                <label for="education">Education</label>
                                <input class="form_group" name="education" value="<%= data.education %>">                                
                            </div>
                            <div class="form_group col-sm-6">
                                <label for="blood_group">Blood Group</label>
                                <input class="form_group" name="blood_group" value="<%= data.blood_group %>">                                
                            </div>
                          </div>
                          <div class="row">
                            <div class="form_group col-sm-6">
                                  <label for="present_position">Present Position</label>
                                  <input class="form_group" name="present_position" value="<%= data.present_position %>">                              
                            </div>
                            <div class="form_group col-sm-6">
                                <label for="past_position">Past Position</label>
                                  <input class="form_group" name="past_position" value="<%= data.past_position %>">                              
                            </div>
                          </div>
                          <div class="row">
                            <div class="form_group col-sm-6">
                                <label for="roles">Roles</label>
                                  <input class="form_group" name="roles" value="<%= data.roles == 1 ? 'Admin' : 'Sub Admin' %>">                              
                            </div>
                            <div class="form_group col-sm-6">
                                <label for="status">Status</label>
                                  <input class="form_group" name="status" value="<%= data.status == 1 ? 'Active' : 'De-Active'%>">                              
                            </div>
                          </div>
                          <div class="row" style="margin-left:-1px;margin-top:15px;">
                            <div class="form_group" style="margin-left:5px">
                              <button type="submit" class="btn btn-primary" id="edit_profile">Submit</button> 
                            </div>
                            <div class="form_group" style="margin-left:5px">
                              <button type="button" class="btn btn-secondary" id="back_btn">
                                <a href="myProfile" style="color:white;">Back</a>
                              </button>                                  
                            </div>
                          </div>
                      </form>
                      
                  </div>
              </div>
          </div>
        </div>

		  </div>
      <!-- End Page Content -->

	</div>
	<!-- End of Main Content -->